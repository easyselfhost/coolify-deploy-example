datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

model Todo {
  id        String   @id @default(cuid())
  content   String
  status    String   // "backlog", "in-progress", "done"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
} 